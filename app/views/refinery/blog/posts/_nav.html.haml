%nav#next_prev_article
  - if @post.prev.present?
    = link_to "#{ fa_icon('long-arrow-left') } &nbsp;".html_safe + h(truncate(@post.prev.title)), refinery.blog_post_path(@post.prev), :class => 'prev'
  = link_to t('blog_home', :scope => 'refinery.blog.posts.show'), refinery.blog_root_path, :class => 'home'
  - if @post.next.present?
    = link_to h(truncate(@post.next.title)) + "&nbsp; #{ fa_icon('long-arrow-right') }".html_safe, refinery.blog_post_path(@post.next), :class => 'next'
  -# next_prev_article
