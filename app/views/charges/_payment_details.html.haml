      #error-explanation
        %p= flash[:error]

    %script.stripe-button{"data-amount" => @order.total_price * 100, "data-description" => "A month's subscription", "data-key" => Rails.configuration.stripe[:publishable_key], "data-locale" => "auto", "data-email" => @brief_request.email, "data-image" => "logo_red.png", "data-name" => "Neuralle Pty Ltd", :src => "https://checkout.stripe.com/checkout.js"}

    = link_to bitpay_charges_path do
      = image_tag 'bitpay_5.png'

- else
  %h4 Please complete the brief form
